
<style>

body {font-family: Arial, Helvetica, sans-serif;}
form {border: 5px solid #f1f1f1;}

input[type=text], input[type=password] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
}
button {
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
}

button:hover {
    opacity: 0.8;
}

.formContainer {
  margin: auto;
  padding: 16px;
  width: 50%;
}
h1 {
  text-align: center;
}
</style>

<h1>New Customer Registration</h1>
<div class="formContainer">
    <form class="form-horizontal newsletterForm" role="form"
          action="/register?form=register"  method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="form-group">
            <label for="fieldUserName" class="col-sm-2 control-label">First Name</label>
            <div class="col-sm-4">
                <input type="text" placeholder="Enter First Name" class="form-control" required
                id="fieldUserName" name="firstname">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldUserName" class="col-sm-2 control-label">Last Name</label>
            <div class="col-sm-4">
                <input type="text" placeholder="Enter Last Name" class="form-control" required
                id="fieldUserName" name="lastname">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldUserName" class="col-sm-2 control-label">Address</label>
            <div class="col-sm-4">
                <input type="text" placeholder="Enter Address" class="form-control"
                id="fieldUserName" name="address">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldUserName" class="col-sm-2 control-label">City</label>
            <div class="col-sm-4">
                <input type="text" placeholder="Enter City" class="form-control"
                id="fieldUserName" name="city">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldUserName" class="col-sm-2 control-label">State</label>
            <div class="col-sm-4">
                <input type="text" placeholder="Enter State" class="form-control"
                id="fieldUserName" name="state">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldUserName" class="col-sm-2 control-label">Zip</label>
            <div class="col-sm-4">
                <input type="text" placeholder="Enter Zip" class="form-control"
                id="fieldUserName" name="zip">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldUserName" class="col-sm-2 control-label">Phone</label>
            <div class="col-sm-4">
                <input type="text" placeholder="Enter Phone" class="form-control" required
                id="fieldUserName" name="phone">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="login" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>
